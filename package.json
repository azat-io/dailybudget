{
  "name": "dailybudget",
  "version": "1.0.0",
  "repository": "git@github.com:azat-io/dailybudget.git",
  "author": "Azat S. <to@azat.io>",
  "license": "MIT",
  "scripts": {
    "start": "concurrently \"npm:start:*\"",
    "start:client": "webpack-dev-server --mode development",
    "start:server": "nodemon --watch server --exec babel-node -- \"./server/app.js\"",
    "build": "webpack --mode production",
    "docs": "jsdoc \"./client/repositories/index.js\" -c \"./.jsdoc.json\"",
    "lint": "concurrently \"npm:lint:*\"",
    "lint:js": "eslint --ignore-path .gitignore .",
    "lint:css": "stylelint \"./**/*.js\"",
    "test": "jest"
  },
  "pre-commit": "lint",
  "dependencies": {
    "apollo-cache-inmemory": "1.2.9",
    "apollo-client": "2.4.1",
    "apollo-link-http": "1.5.4",
    "apollo-server-express": "2.0.6",
    "babel-cli": "6.26.0",
    "babel-preset-env": "1.7.0",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-react": "6.24.1",
    "babel-preset-stage-0": "6.24.1",
    "babel-preset-stage-3": "6.24.1",
    "chalk": "2.4.1",
    "cors": "2.8.4",
    "dotenv": "6.0.0",
    "express": "4.16.3",
    "graphql": "14.0.2",
    "graphql-import": "0.7.0",
    "graphql-tag": "2.9.2",
    "lodash": "4.17.10",
    "mongoose": "5.2.13",
    "polished": "1.9.3",
    "react": "16.4.2",
    "react-apollo": "2.1.11",
    "react-dom": "16.4.2",
    "react-redux": "5.0.7",
    "react-router": "4.3.1",
    "react-router-dom": "4.3.1",
    "react-svg-inline": "2.1.1",
    "recompose": "0.28.2",
    "redux": "4.0.0",
    "styled-components": "3.4.2",
    "uuid": "3.3.2"
  },
  "devDependencies": {
    "babel-jest": "23.4.2",
    "babel-loader": "7.1.5",
    "concurrently": "3.6.1",
    "docdash": "1.0.0",
    "eslint": "5.4.0",
    "eslint-config-standard": "11.0.0",
    "eslint-config-standard-react": "6.0.0",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-node": "7.0.1",
    "eslint-plugin-promise": "4.0.0",
    "eslint-plugin-react": "7.11.1",
    "eslint-plugin-standard": "3.1.0",
    "favicons-webpack-plugin": "0.0.9",
    "file-loader": "2.0.0",
    "hard-source-webpack-plugin": "0.12.0",
    "html-webpack-plugin": "3.2.0",
    "html-webpack-template": "6.2.0",
    "image-webpack-loader": "4.3.1",
    "jest": "23.5.0",
    "jsdoc": "3.5.5",
    "nodemon": "1.18.3",
    "pre-commit": "1.2.2",
    "raw-loader": "0.5.1",
    "stylelint": "9.5.0",
    "stylelint-config-standard": "18.2.0",
    "stylelint-config-styled-components": "0.1.1",
    "stylelint-processor-styled-components": "1.3.2",
    "svgo": "1.0.5",
    "svgo-loader": "2.1.0",
    "webpack": "4.16.5",
    "webpack-cli": "3.1.0",
    "webpack-dev-server": "3.1.5"
  },
  "jest": {
    "moduleDirectories": [
      "client",
      "node_modules"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "moduleNameMapper": {
      "\\.(jpe?g|png|svg)$": "<rootDir>/client/etc/media-file-transformer.js"
    }
  }
}
